<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Etablissements">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnSearchEtab"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:onClick="openDrawerEtab"
            android:singleLine="false"
            android:layout_margin="@dimen/activity_horizontal_margin"
            style="@style/imageButtonStyle" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnMap"
            android:layout_weight="1"
            android:src="@drawable/ic_map"
            android:onClick="openPlacePicker"
            android:layout_margin="@dimen/activity_horizontal_margin"
            style="@style/imageButtonStyle" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnEmptyLvEtab"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_all"
            android:onClick="emptyLvEtab"
            android:layout_margin="@dimen/activity_horizontal_margin"
            style="@style/imageButtonStyle" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvEtab"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout3" />

</RelativeLayout>
