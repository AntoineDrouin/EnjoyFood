<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/mainColor</item>
        <item name="android:panelBackground">@color/colorButtonFont</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:imageButtonStyle">@style/imageButtonStyle</item>
    </style>

    <style name="buttonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="android:textColor">@color/colorButtonFont</item>
    </style>

    <style name="imageButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@color/mainColor</item>
        <item name="android:textColor">@color/colorButtonFont</item>
        <item name="android:layout_margin">@dimen/activity_big_padding</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/customTextAppearance</item>
    </style>

    <style name="customTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

</resources>